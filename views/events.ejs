<%-include("partials/header")-%>

<link href="/css/carousel.css" rel="stylesheet">
  </head>

<body>
    <main role="main">

    <div id="myCarousel" class="carousel slide background-1" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#myCarousel" data-slide-to="0" class="active"></li>

            <% events.forEach((event,index) => { %>
            <%    if(index !== 0){ %>
                    <li data-target="#myCarousel" data-slide-to="<%=index %>"></li>
               <% } %>
           <% });%>
          
          
        </ol>
        <div class="carousel-inner">


          <div class="carousel-item active">
            <img src= "images/0.jpg" alt="event1-img">
            <div class="container">
              <div class="carousel-caption text-left">
                <!-- leave caption empty -->
              </div>
            </div>
          </div>

          <%  events.forEach((event,index)=>{ %>
          <%    if(index != 0){ %>
                <div class="carousel-item">
                    <img src="images/<%=index%>.jpg" alt="Subsequent slide">
                    <div class="container">
                      <div class="carousel-caption text-left">
                        <!-- leave caption empty -->
                      </div>
                    </div>
                  </div>
            <%  } %>
         <% }) %>


        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
    </div>


      <!-- Marketing messaging and featurettes
      ================================================== -->
      <!-- Wrap the rest of the page in another container to center all the content. -->

      <div class="container marketing container-top-margin">
        <div class ="background-2">
        <!-- Three columns of text below the carousel -->
        <div class="row">

        <%  events.forEach((event,index)=>{ %>

            <div class="col-lg-4">
                <img class="rounded-circle" src="<%= event.image_url %>" alt="Generic placeholder image" width="140" height="140">
                <h2> <%= event.name %> </h2>
                <p> <%= event.location.display_address %> </p>
                <p><a class="btn btn-secondary" href="#f<%= index%>" role="button">Details &raquo;</a></p>
            </div>
        
          <% }) %>

        </div><!-- /.row -->

        </div>
        <!-- START THE FEATURETTES -->

        <hr class="featurette-divider">


        <% events.forEach((event,index)=>{ %>
         <%   if(index%2 === 0){  %>
            <!-- even index -->
            <div class="row featurette" id="f<%= index %>">
                <div class="col-md-7">
                  <h2 class="featurette-heading"> <%= event.name %> <span class="text-muted"></span></h2>
                  <p class="lead"><%= event.description %></p>
                </div>
                <div class="col-md-5">
                  <img class="featurette-image img-fluid mx-auto" src="<%= event.image_url %>" alt="Generic placeholder image">
                </div>
              </div>
      
              <hr class="featurette-divider">
           <% }else{ %>
                <!-- odd index -->

        <div class="row featurette" id="f<%= index %>">
            <div class="col-md-7 order-md-2">
              <h2 class="featurette-heading"><%= event.name %> <span class="text-muted"></span></h2>
              <p class="lead"><%= event.description %></p>
            </div>
            <div class="col-md-5 order-md-1">
              <img class="featurette-image img-fluid mx-auto" src="<%= event.image_url %>" alt="Generic placeholder image">
            </div>
          </div>
  
          <hr class="featurette-divider">
          <% }%>
       <% }) %>
        

        <!-- /END THE FEATURETTES -->

      </div><!-- /.container -->

    </main>

      <!-- FOOTER --> 
      <%- include("partials/footer"); -%>
    